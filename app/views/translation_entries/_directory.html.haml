%section.marg-bot-lg.marg-top-lg
.row
  .col-lg-3
    .panel.panel-default.no-border
      .panel-heading.bg-black.text-center{ :style => "border-bottom: 0;" }
        .dropdown.grey-dropdown
          %button#dropdownMenu1.btn.btn-grey.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
            Filter by
            %span.caret
          %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
            %li{:role => "presentation"}
              %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Action
            %li{:role => "presentation"}
              %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Another action
            %li{:role => "presentation"}
              %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Something else here
            %li{:role => "presentation"}
              %a{:href => "#", :role => "menuitem", :tabindex => "-1"} Separated link
      .panel-body.no-border.file-list{ :style => "padding-top: 0" }
        .row.two-button
          .col-xs-3.bg-blue.text-center
            - if @translation_entry && @translation_entry.parent_entry#TODO: fix it
              = link_to project_translation_entry_path(id: @translation_entry.parent_entry) do
                %span.glyphicon.glyphicon-chevron-left
          .col-xs-9
            .dropdown.grey-dropdown.file-search
              %button#dropdownMenu1.btn.btn-grey.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", :type => "button"}
                Dropdown
                %span.caret
              %ul.dropdown-menu.dropdown-menu-left{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
                %li{:role => "presentation"}
                  %form{:role => "search"}
                    .form-group
                      %input.form-control{:placeholder => "Search", :type => "text"}/
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} File 1
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} File 2
                %li{:role => "presentation"}
                  %a{:href => "#", :role => "menuitem", :tabindex => "-1"} File 3

      .panel-body.no-padding.no-border.file-list
        %ul.list-group.no-border.file-list
          - @translation_entries.each do |translation_entry|
            %li.list-group-item.no-border{class: cycle('even', 'odd')}
              %i.fa.text-blue.marg-right-sm{class: translation_entry.block? ? 'fa-folder' : 'fa-file-text-o'}
              %span
                - if translation_entry.key?
                  = link_to translation_entry.key, project_translation_entry_translations_path(translation_entry_id: translation_entry)
                - else
                  = link_to translation_entry.key, project_translation_entry_path(id: translation_entry)
  .col-lg-9
    .well.text-center.no-border-radius
      = link_to new_project_translation_entry_path do
        .btn.btn-primary.padder-v-lg.text-uppercase
          Add
    #accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
      - @translation_entries.each do |translation_entry|
        - if translation_entry.key?
          = render partial: 'translation_entry_accordion', locals: {translation_entry: translation_entry}